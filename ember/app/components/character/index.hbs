<div class="autoCharacter">
  {{#if @sound}}
    <p class="sound">
      {{@sound}}
    </p>
  {{/if}}
  <span class="character">
    {{yield}}
    <span class="face">
      {{this.emoji}}
    </span>
    {{#if @emotion}}
      <span class="emotion">
        {{@emotion}}
      </span>
    {{/if}}
  </span>
</div>
{{#if @say}}
  <p class="bubble autoBubble font-delius text-sm m-1 p-1 bg-white opacity-90 relative border-4 border-black after:absolute after:bottom-0 after:left-3 after:w-0 after:h-0 after:border-0 after:border-t-8 after:border-l-8 after:-m-8 after:-b-8 after:border-black">
    {{@say}}
  </p>
{{/if}}
